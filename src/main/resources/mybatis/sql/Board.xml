<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nimoh.hotel.repository.BoardRepository">
    <select id="getList" parameterType="com.nimoh.hotel.data.entity.Board" resultType="com.nimoh.hotel.data.entity.Board">
        SELECT
            *
        FROM Board
    </select>

    <select id="get" parameterType="int" resultType="com.nimoh.hotel.data.entity.Board">
        SELECT
        *
        FROM Board
        WHERE id = #{boardIdx}
    </select>

    <insert id="save" parameterType="com.nimoh.hotel.data.entity.Board">
        INSERT INTO Board VALUES
        (
            null,
            #{title},
            #{content},
            #{writer},
            #{category},
            NOW()
        )
    </insert>

    <update id="update" parameterType="com.nimoh.hotel.data.entity.Board">
        UPDATE Board
        SET
            title = #{title},
            content = #{content}
        WHERE id = #{boardIdx}
    </update>

    <update id="delete" parameterType="int">
        DELETE FROM Board
        WHERE id = #{boardIdx}
    </update>

</mapper>